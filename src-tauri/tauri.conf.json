{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UKMCL",
  "version": "0.0.1",
  "identifier": "com.theunknowngroup.ukmcl",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "index",
        "title": "UKMCL",
        "width": 950,
        "height": 530,
        "resizable": false,
        "center": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../src/**/*"
    ],
    "icon": [
      "icons/32x32.rgba",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
